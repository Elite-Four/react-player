{
  "name": "react-player",
  "version": "0.0.1",
  "description": "React Editor and Previewer",
  "main": "src/Player.js",
  "scripts": {
    "build": "browserify src/Player.jsx --standalone Player | uglifyjs - --compress --output dist/Player.js",
    "watch": "watchify src/Player.jsx --standalone Player --outfile dist/Player.js --debug --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Elite-Four/react-player.git"
  },
  "keywords": [
    "react",
    "editor",
    "previewer"
  ],
  "author": "George Chung <Gerhut@GMail.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/Elite-Four/react-player/issues"
  },
  "homepage": "https://github.com/Elite-Four/react-player#readme",
  "dependencies": {
    "babelify": "^6.1.3",
    "browserify": "^10.2.6",
    "uglify-js": "^2.4.23"
  },
  "devDependencies": {
    "watchify": "^3.2.3"
  },
  "browserify": {
    "transform": [
      ["babelify", {"sourceMaps": "inline"}]
    ]
  }
}
